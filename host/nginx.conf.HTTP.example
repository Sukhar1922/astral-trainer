server {
    listen 80;
    server_name _; # if you have domain name change '_' to the domain name
    
    root /home/username/astral-trainer/; # change current path to the application

    index index.html;

    location / {
        proxy_pass http://127.0.0.1:8000;  # if you have another addres or port change it
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ /\. {
        deny all;
    }

    location ~* \.(md|env|config|lock)$ {
        deny all;
    }

    autoindex off;

    if ($request_method !~ ^(GET|HEAD)$ ) {
        return 405;
    }

    access_log /var/log/nginx/astral_trainer_access.log;
    error_log  /var/log/nginx/astral_trainer_error.log;
}