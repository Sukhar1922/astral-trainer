server {
    listen 80;
    server_name _; # if you have domain name change '_' to the domain name

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name _; # if you have domain name change '_' to the domain name

    ssl_certificate /etc/nginx/ssl/selfsigned.crt; # if you need you may change ssl path 
    ssl_certificate_key /etc/nginx/ssl/private.key; # if you need you may change ssl path
    ssl_protocols TLSv1.2 TLSv1.3;  
    ssl_ciphers HIGH:!aNULL:!MD5; 
    
    root /home/username/astral-trainer/; # change current path to the application

    index index.html;

    location / {
        proxy_pass http://127.0.0.1:8000;  # if you have another address or port change it
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ~ /\. {
        deny all;
    }

    location ~* \.(md|env|config|lock)$ {
        deny all;
    }

    location /host/ {
        deny all;
    }

    autoindex off;

    if ($request_method !~ ^(GET|HEAD)$ ) {
        return 405;
    }

    access_log /var/log/nginx/astral_trainer_access.log;
    error_log  /var/log/nginx/astral_trainer_error.log;
}